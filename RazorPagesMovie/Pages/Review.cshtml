@page
@model RazorPagesMovie.Pages.ReviewsModel
@{
}

<html>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <img class="img-thumbnail" src="https://usustatesman.com/wp-content/uploads/2016/12/movie-reviews-design.jpg?w=640" />
        </div>

        <div class="col-sm-6">
            <h1>Movie Reviews</h1>
            <p>This is a site of very, very lengthy movie reviews.  It will go on and on. Because it is a review site, there will be very little positive said.</p>

        </div>
    </div>

    @foreach (var item in Model.Review)
    {
        <hr />
        <div class="row">

            <div class="col-sm-6">
                <h1>@Html.DisplayFor(modelItem => item.MovieName)</h1>

                @for (var i = 0; i < item.NumberOfStars; i++)
                {
                    <img width="40" src="https://www.pngfind.com/pngs/m/61-610882_gold-star-png-download-gold-star-transparent-png.png" />
                }
            <p>@Html.DisplayFor(modelItem => item.ReviewText)</p>
            </div>

            <div class="col-sm-6">
                <img class="img-thumbnail" src="@Html.DisplayFor(modelItem => item.ImageURL)" />
            </div>
        </div>
    }
</html>